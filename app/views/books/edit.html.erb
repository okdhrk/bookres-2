<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h2>Editing Book</h2>
      <%= form_with model: @book, url: books_path(@book), local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Update Book' %>
      <% end %>
      <div class="mt-5"><%= link_to "Show", book_path(@book) %> | <%= link_to "back", books_path %></div>
    </div>
  </div>
</div>
