<div class="container mt-5">
  <div class="row">
    <div class="col">

      <h2>Books</h2>

      <table ="table", class="mb-5 mt-4">

        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <th><%= book.title %></th>
          <th><%= book.body %></th>
          <th><%= link_to "show", book_path(book) %></th>
          <th><%= link_to "edit", edit_book_path(book) %></th>
          <th><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?"  %></th>
        </tr>
        <% end %>
      </table>

      <h2>New Book</h2>

      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%= form_with model: @book, url: books_path, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book' %>
      <% end %>

    </div>
  </div>
</div>